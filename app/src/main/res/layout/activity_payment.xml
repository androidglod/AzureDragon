<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/color_FFFFFF"
    android:id="@+id/ll_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_common_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="43dp"
            android:layout_height="35dp"
            android:paddingLeft="17dp"
            android:layout_centerVertical="true"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingRight="17dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/common_back"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/atv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_return"
            android:layout_marginRight="45dp"
            android:gravity="center|left"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="充值"
            android:textColor="@color/color_FAFAD2"
            android:textSize="16sp"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/payment"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="#222222"
            android:textSize="16sp"
            android:text="支付方式："
            android:gravity="center"/>

        <ImageView
            android:id="@+id/iv_payment"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_select_payment"
            android:gravity="center"
            app:srcCompat="@drawable/about_allin_we_chat"
            tools:ignore="VectorDrawableCompat"/>

        <TextView
            android:id="@+id/tv_select_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:textColor="#222222"
            android:textSize="16sp"
            android:drawableRight="@drawable/customer_arrow_gran"
            android:text="微信"
            android:gravity="center"/>
    </RelativeLayout>

        <TextView
            android:id="@+id/tv_scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_common_bg"
            android:clickable="true"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="智能扫描"
            android:gravity="center"/>
</LinearLayout>