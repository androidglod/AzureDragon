<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/color_FFFFFF"
    android:id="@+id/ll_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_common_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_return"
            android:layout_width="43dp"
            android:layout_height="35dp"
            android:paddingLeft="17dp"
            android:layout_centerVertical="true"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:paddingRight="17dp"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/common_back"
            tools:ignore="VectorDrawableCompat" />

        <TextView
            android:id="@+id/atv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_return"
            android:layout_marginRight="45dp"
            android:gravity="center|left"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="充值"
            android:textColor="@color/color_FAFAD2"
            android:textSize="16sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/payment"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:textColor="#222222"
            android:textSize="16sp"
            android:text="支付方式："
            android:gravity="center"/>

        <ImageView
            android:id="@+id/iv_payment"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_select_payment"
            android:gravity="center"
            app:srcCompat="@drawable/about_allin_we_chat"
            tools:ignore="VectorDrawableCompat"/>

        <TextView
            android:id="@+id/tv_select_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:textColor="#222222"
            android:textSize="16sp"
            android:drawableRight="@drawable/customer_arrow_gran"
            android:text="微信"
            android:gravity="center"/>
    </RelativeLayout>


    <View
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/color_F1F4F9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:padding="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp"
            android:id="@+id/shiyuan">

            <ImageView
                android:id="@+id/ch_box_10"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:checked="true"
                app:srcCompat="@drawable/consultation_selected"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/ch_box_10"
                android:textColor="@color/color_222222"
                android:text="1000点"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:id="@+id/ershi">

            <ImageView
                android:id="@+id/ch_box_20"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:checked="true"
                app:srcCompat="@drawable/consultation_select"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/ch_box_20"
                android:textColor="@color/color_222222"
                android:text="3000点"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp"
            android:padding="10dp"
            android:id="@+id/wushi">

            <ImageView
                android:id="@+id/ch_box_50"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:checked="true"
                app:srcCompat="@drawable/consultation_select"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/ch_box_50"
                android:textColor="@color/color_222222"
                android:text="5000点"
                android:textSize="16sp" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:padding="10dp"
            android:layout_marginStart="10dp"
            android:id="@+id/yibaiyuan">

            <ImageView
                android:id="@+id/ch_box_100"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:checked="true"
                app:srcCompat="@drawable/consultation_select"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/ch_box_100"
                android:id="@+id/tv_radiobutton_title"
                android:textColor="@color/color_222222"
                android:text="10000点"
                android:textSize="16sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_custom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="10dp"
            android:paddingTop="8dp"
            android:paddingLeft="10dp">

            <ImageView
                android:id="@+id/ch_custom"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:checked="true"
                app:srcCompat="@drawable/consultation_select"
                tools:ignore="VectorDrawableCompat"/>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/me_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginRight="15dp"
                android:focusable="false"
                android:paddingBottom="16dp"
                android:layout_toEndOf="@+id/ch_custom"
                android:hint="自定义点卷"
                android:inputType="number"
                app:met_clearButton="true"
                app:met_floatingLabel="highlight"
                app:met_iconPadding="0dp"/>

        </RelativeLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/tv_pay"
        android:layout_height="34dp"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:gravity="center"
        android:text="支付10元"
        android:background="@drawable/bg_login_btn"/>
</LinearLayout>