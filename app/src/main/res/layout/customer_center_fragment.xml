<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="250dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_myself_top_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        app:layout_collapseMode="parallax">

        <!--头像-->
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/common_head_portrait"
            tools:ignore="MissingPrefix"/>
        <!--登录用户展示-->
        <RelativeLayout
            android:id="@+id/ll_name_and_auth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/iv_head"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_width="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="left"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_222222"
                    android:layout_toLeftOf="@+id/iv_auth_v"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    tools:text="白静春白静春白静春白静春白静春白静春"/>

                <ImageView
                    android:id="@+id/iv_auth_v"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:baselineAlignBottom="@id/tv_name"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_medical_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_name"
                android:layout_marginTop="10dp"
                android:textColor="@color/color_999999"
                android:textSize="15dp"
                tools:text="主任医师"/>

            <TextView
                android:id="@+id/tv_hospital_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_medical_title"
                android:layout_marginTop="2dp"
                android:textColor="@color/color_999999"
                android:textSize="15dp"
                tools:text="中国人民解放军总医院"/>

        </RelativeLayout>

        <!--非登录用户展示-->

        <TextView
            android:id="@+id/tv_login"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="请登录"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_head"
            android:background="@drawable/common_bg"
            android:gravity="center"
            android:textColor="@color/color_FAFAD2"
            android:textStyle="bold"
            android:textSize="14sp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/customer_home_shadow">
        <!--我的收藏-->
        <RelativeLayout
            android:id="@+id/rl_main_tab_bar_collection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <!--<ImageView-->
                <!--android:id="@+id/iv_main_tab_bar_collection"-->
                <!--style="@style/customer_center_download_image"-->
                <!--app:srcCompat="@drawable/customer_collect_logo"/>-->

            <TextView
                android:id="@+id/tv_main_tab_bar_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="9dp"
                android:text="SSSS"
                android:textColor="@color/color_FAFAD2"
                android:textSize="18dp"/>


        </RelativeLayout>
        <!--我的下载-->
        <RelativeLayout
            android:id="@+id/rl_main_tab_bar_download"
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical">


            <TextView
                android:id="@+id/tv_main_tab_bar_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="9dp"
                android:text="SASDA"
                android:textColor="@color/color_FAFAD2"
                android:textSize="16dp"/>

        </RelativeLayout>
        <!--我的浏览-->
        <RelativeLayout
            android:id="@+id/rl_main_tab_bar_scan"
            android:layout_width="@dimen/px0"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical">



            <TextView
                android:id="@+id/tv_main_tab_bar_scan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="9dp"
                android:text=";LKDF"
                android:textColor="@color/color_FAFAD2"
                android:textSize="@dimen/px34"/>



        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_left_menu"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_about_us"
            style="@style/customer_center_list_title"
            android:layout_marginRight="15dp"
            android:lines="1"
            android:padding="12dp"
            android:text="@string/about_us"/>
    </LinearLayout>

</LinearLayout>
