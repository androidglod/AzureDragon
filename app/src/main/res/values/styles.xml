<resources>

    <!-- Base application theme. -->
    <style name="CAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#767676</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CAppTransparentTheme" parent="CAppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="anim_pop_checkaddshelf">
        <item name="android:windowEnterAnimation">@anim/anim_pop_checkaddshelf_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_checkaddshelf_out</item>
    </style>

    <style name="anim_pop_chapterlist">
        <item name="android:windowEnterAnimation">@anim/anim_pop_chapterlist_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_chapterlist_out</item>
    </style>'

    <style name="anim_pop_moresetting">
        <item name="android:windowEnterAnimation">@anim/anim_pop_moresetting_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_moresetting_out</item>
    </style>

    <style name="anim_pop_windowlight">
        <item name="android:windowEnterAnimation">@anim/anim_pop_windowlight_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_windowlight_out</item>
    </style>
    <style name="anim_pop_windowmenumore">
        <item name="android:windowEnterAnimation">@anim/anim_pop_windowmenumore_in</item>
        <item name="android:windowExitAnimation">@anim/anim_pop_windowmenumore_out</item>
    </style>

    <style name="customer_center_list_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_common_bg</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="customDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item><!--取消默认Dialog的windowFrame框-->
        <item name="android:windowNoTitle">true</item><!--设置无标题Dialog-->
        <item name="android:backgroundDimEnabled">true</item><!--是否四周变暗-->
        <item name="android:windowIsFloating">true</item><!-- 是否悬浮在activity上 -->
        <item name="android:windowContentOverlay">@null</item><!-- 取消默认ContentOverlay背景 -->
        <item name="android:windowBackground">@android:color/transparent</item><!--取消window默认背景 不然四角会有黑影-->
    </style>
</resources>